!!!
%head
	%meta(http-equiv="Content-Type" content="text/html; charset=UTF-8")
	%meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
	%title
		%g:layoutTitle(default="Coffee With Backbone")
	%meta(name="viewport" content="width=device-width, initial-scale=1.0")
	%link(rel="shortcut icon" href="${resource(dir: 'images', file: 'favicon.ico')}" type="image/x-icon")
	%link(rel="apple-touch-icon" href="${resource(dir: 'images', file: 'apple-touch-icon.png')}")
	%link(rel="apple-touch-icon" sizes="114x114" href="${resource(dir: 'images', file: 'apple-touch-icon-retina.png')}")
	%link(rel="stylesheet" href="${resource(dir: 'css', file: 'main.css')}" type="text/css")
	%link(rel="stylesheet" href="${resource(dir: 'css', file: 'mobile.css')}" type="text/css")
	
	/ Here's our Application Specific CSS file
	%link(rel="stylesheet" href="${resource(dir: 'css', file: 'coffee_with_backbone.css')}" type="text/css")
	
	%g:layoutHead/
	
	/ Make sure that the Backbone can be used and load jquery-ui so it can be used.
	%r:require(module="backbone")/
	%r:require(module="jquery-ui")/
	%r:layoutResources/

%body
	#spinner.spinner(style="display:none;")
		%g:message(code="spinner.alt" default="Loading&hellip;")
		.logo
	%img(src="${createLinkTo(dir:'images',file:'grails_logo.jpg')}" alt="Grails")
	
	%g:if(test="${flash.message}")
		.flash
			${flash.message}
	%g:if(test="${flash.error}")
		.errors
			${flash.error}
			
	%g:layoutBody/
	
	.footer(role="contentinfo")
	%g:javascript(library="application")
	%r:layoutResources/
